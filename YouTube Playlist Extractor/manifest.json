{
  "manifest_version": 3,
  "name": "YouTube Playlist Extractor",
  "version": "2.0",
  "description": "Extract YouTube playlist information in various formats (URLs, markdown, titles)",
  "permissions": [
    "scripting",
    "tabs",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
